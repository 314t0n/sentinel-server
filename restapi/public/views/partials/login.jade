.container
  .row
    .col-md-4.col-md-offset-4
      .login-panel.panel.panel-default
        .panel-heading
          h3.panel-titlePlease Belépés
                    
        .panel-body
          form(role="form")
            fieldset
              .form-group
                input.form-control(placeholder="E-mail" ng-model="email" name="email" type="email" autofocus, required)
            
              .form-group
                input.form-control(placeholder="Password" ng-model="password" name="password" type="password", required)
              .form-group
                button.btn.btn-lg.btn-success.btn-blockLogin(type="submit" ng-click="login()") Belépés
                            
                       
                    
                
            
        
    